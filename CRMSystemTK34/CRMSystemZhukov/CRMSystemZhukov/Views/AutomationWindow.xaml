<Window x:Class="CRMSystemZhukov.Views.AutomationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CRMSystemZhukov.ViewModels"
        Title="Автоматизация и напоминания" Height="600" Width="800" MinHeight="400" MinWidth="600" WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="CanResize" Background="#23272E">
    <Window.DataContext>
        <local:AutomationViewModel/>
    </Window.DataContext>
    <Border CornerRadius="14" Background="#23272E">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="64"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!-- Верхняя панель -->
            <Border Grid.Row="0" Background="#2C313A" CornerRadius="14,14,0,0" Height="64">
                <DockPanel VerticalAlignment="Center">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE7C3;" FontSize="28" Foreground="#4F8EF7" Margin="20,0,8,0" DockPanel.Dock="Left"/>
                    <TextBlock Text="Автоматизация и напоминания" FontSize="20" FontWeight="Bold" Foreground="#F3F3F3" VerticalAlignment="Center"/>
                    <Button Width="36" Height="36" Padding="0" Background="#23272E" BorderThickness="0" ToolTip="Закрыть" DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="0,0,12,0" Click="OnCloseButtonClick">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8BB;" FontSize="20" Foreground="#E81123" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Button>
                </DockPanel>
            </Border>
            <!-- Контент -->
            <StackPanel Grid.Row="1" Margin="24">
                <TextBlock Text="Автоматизация и напоминания" Style="{StaticResource HeaderText}"/>
                <Border Style="{StaticResource SectionDivider}"/>
                <TextBlock Text="Ближайшие дни рождения клиентов (7 дней)" FontWeight="Bold" FontSize="16" Margin="0,0,0,5" Foreground="{StaticResource TextBrush}"/>
                <DataGrid ItemsSource="{Binding Birthdays}" AutoGenerateColumns="False" Height="120" Margin="0,0,0,10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Имя" Binding="{Binding Name}"/>
                        <DataGridTextColumn Header="Дата рождения" Binding="{Binding Birthdate, StringFormat=d}"/>
                    </DataGrid.Columns>
                </DataGrid>
                <TextBlock Text="Просроченные задачи" FontWeight="Bold" FontSize="16" Margin="0,10,0,5" Foreground="{StaticResource TextBrush}"/>
                <DataGrid ItemsSource="{Binding OverdueTasks}" AutoGenerateColumns="False" Height="140">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Описание" Binding="{Binding Description}"/>
                        <DataGridTextColumn Header="Срок" Binding="{Binding DueDate, StringFormat=d}"/>
                        <DataGridTextColumn Header="Статус" Binding="{Binding Status}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Grid>
    </Border>
</Window> 