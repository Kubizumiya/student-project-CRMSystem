<Application x:Class="CRMSystemZhukov.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CRMSystemZhukov"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <!-- Цвета -->
        <Color x:Key="BackgroundColor">#23272E</Color>
        <Color x:Key="PanelColor">#2C313A</Color>
        <Color x:Key="AccentColor">#4F8EF7</Color>
        <Color x:Key="TextColor">#F3F3F3</Color>
        <Color x:Key="BorderColor">#3A3F47</Color>
        <Color x:Key="ErrorColor">#E81123</Color>

        <!-- Кисти -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
        <SolidColorBrush x:Key="PanelBrush" Color="{StaticResource PanelColor}" />
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />
        <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}" />

        <!-- Эффект тени -->
        <DropShadowEffect x:Key="ShadowEffect" BlurRadius="10" ShadowDepth="2" Color="#80000000" />

        <!-- Стиль окна -->
        <Style TargetType="Window">
            <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="16" />
        </Style>

        <!-- Стиль заголовка -->
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="Margin" Value="0,0,0,20" />
        </Style>

        <!-- Стиль DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource PanelBrush}" />
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="RowBackground" Value="#262B33" />
            <Setter Property="AlternatingRowBackground" Value="#23272E" />
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="RowHeight" Value="40" />
            <Setter Property="ColumnHeaderHeight" Value="44" />
            <Setter Property="Effect" Value="{StaticResource ShadowEffect}" />
            <Setter Property="GridLinesVisibility" Value="None" />
            <Setter Property="HeadersVisibility" Value="Column" />
            <Setter Property="SelectionUnit" Value="FullRow" />
            <Setter Property="RowHeaderWidth" Value="0" />
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#4F8EF7" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{StaticResource PanelBrush}" />
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="FontSize" Value="16" />
                        <Setter Property="BorderThickness" Value="0,0,0,1" />
                        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="Padding" Value="8,0,8,0" />
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль кнопки (IconButton) -->
        <Style TargetType="Button" x:Key="IconButton">
            <Setter Property="Background" Value="{StaticResource AccentBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Padding" Value="10,6" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="MinWidth" Value="120" />
            <Setter Property="MinHeight" Value="38" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Effect" Value="{StaticResource ShadowEffect}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#6FA8F7"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2C313A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#23272E" />
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Margin" Value="0,0,0,12" />
            <Setter Property="Effect" Value="{StaticResource ShadowEffect}" />
        </Style>

        <!-- Стиль DatePicker -->
        <Style TargetType="DatePicker">
            <Setter Property="Background" Value="#23272E" />
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Margin" Value="0,0,0,12" />
            <Setter Property="Effect" Value="{StaticResource ShadowEffect}" />
        </Style>

        <!-- Стиль разделителя -->
        <Style x:Key="SectionDivider" TargetType="Border">
            <Setter Property="Height" Value="1" />
            <Setter Property="Background" Value="{StaticResource BorderBrush}" />
            <Setter Property="Margin" Value="0,16,0,16" />
        </Style>

        <!-- Watermark TextBox (для поиска) -->
        <Style x:Key="WatermarkTextBox" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <Grid>
                                <TextBlock x:Name="SearchIcon"
                                           FontFamily="Segoe MDL2 Assets"
                                           Text="&#xE721;"
                                           Foreground="#80FFFFFF"
                                           FontSize="18"
                                           VerticalAlignment="Center"
                                           Margin="12,0,0,0"
                                           HorizontalAlignment="Left"
                                           IsHitTestVisible="False"/>
                                <ScrollViewer x:Name="PART_ContentHost"
                                              Margin="36,0,8,0"/>
                                <TextBlock x:Name="Watermark"
                                           Text="Поиск..."
                                           Foreground="#80FFFFFF"
                                           FontStyle="Italic"
                                           Margin="36,0,8,0"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False"
                                           Visibility="Collapsed"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
