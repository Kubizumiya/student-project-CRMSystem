<Window x:Class="CRMSystemZhukov.Views.AnalyticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CRMSystemZhukov.ViewModels"
        Title="Аналитика" Height="700" Width="1100" MinHeight="500" MinWidth="800" WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="CanResize" Background="#23272E">
    <Window.DataContext>
        <local:AnalyticsViewModel/>
    </Window.DataContext>
    <Border CornerRadius="14" Background="#23272E">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="64"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!-- Верхняя панель -->
            <Border Grid.Row="0" Background="#2C313A" CornerRadius="14,14,0,0" Height="64">
                <DockPanel VerticalAlignment="Center">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE9D9;" FontSize="28" Foreground="#4F8EF7" Margin="20,0,8,0" DockPanel.Dock="Left"/>
                    <TextBlock Text="Аналитика" FontSize="20" FontWeight="Bold" Foreground="#F3F3F3" VerticalAlignment="Center"/>
                    <Button Width="36" Height="36" Padding="0" Background="#23272E" BorderThickness="0" ToolTip="Закрыть" DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="0,0,12,0" Click="OnCloseButtonClick">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8BB;" FontSize="20" Foreground="#E81123" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Button>
                </DockPanel>
            </Border>
            <!-- Контент -->
            <ScrollViewer Grid.Row="1">
                <StackPanel Margin="24">
                    <TextBlock Text="Аналитика" Style="{StaticResource HeaderText}"/>
                    <Border Style="{StaticResource SectionDivider}"/>
                    <TextBlock Text="Общая статистика" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" Foreground="{StaticResource TextBrush}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Клиентов: " Foreground="{StaticResource TextBrush}"/><TextBlock Text="{Binding ClientsCount}" FontWeight="Bold" Margin="0,0,10,0" Foreground="{StaticResource TextBrush}"/>
                        <TextBlock Text="Сделок: " Foreground="{StaticResource TextBrush}"/><TextBlock Text="{Binding DealsCount}" FontWeight="Bold" Margin="0,0,10,0" Foreground="{StaticResource TextBrush}"/>
                        <TextBlock Text="Задач: " Foreground="{StaticResource TextBrush}"/><TextBlock Text="{Binding TasksCount}" FontWeight="Bold" Margin="0,0,10,0" Foreground="{StaticResource TextBrush}"/>
                        <TextBlock Text="Кампаний: " Foreground="{StaticResource TextBrush}"/><TextBlock Text="{Binding CampaignsCount}" FontWeight="Bold" Foreground="{StaticResource TextBrush}"/>
                    </StackPanel>
                    <Border Style="{StaticResource SectionDivider}"/>
                    <TextBlock Text="Продажи по месяцам" FontWeight="Bold" Margin="0,10,0,5" Foreground="{StaticResource TextBrush}"/>
                    <DataGrid ItemsSource="{Binding SalesByMonths}" AutoGenerateColumns="False" Height="120" Margin="0,0,0,10"/>
                    <TextBlock Text="Задачи по статусу" FontWeight="Bold" Margin="0,10,0,5" Foreground="{StaticResource TextBrush}"/>
                    <DataGrid ItemsSource="{Binding TasksByStatus}" AutoGenerateColumns="False" Height="100" Margin="0,0,0,10"/>
                    <TextBlock Text="Клиенты по сегменту" FontWeight="Bold" Margin="0,10,0,5" Foreground="{StaticResource TextBrush}"/>
                    <DataGrid ItemsSource="{Binding ClientsBySegment}" AutoGenerateColumns="False" Height="100"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window> 