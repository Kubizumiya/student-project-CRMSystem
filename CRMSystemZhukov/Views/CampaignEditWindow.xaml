<Window x:Class="CRMSystemZhukov.Views.CampaignEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Кампания" Height="600" Width="440" WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="NoResize" Background="#23272E">
    <Border CornerRadius="14" Background="#23272E">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="64"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!-- Верхняя панель -->
            <Border Grid.Row="0" Background="#2C313A" CornerRadius="14,14,0,0" Height="64">
                <DockPanel VerticalAlignment="Center">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE7BE;" FontSize="28" Foreground="#4F8EF7" Margin="20,0,8,0" DockPanel.Dock="Left"/>
                    <TextBlock Text="Редактирование кампании" FontSize="20" FontWeight="Bold" Foreground="#F3F3F3" VerticalAlignment="Center"/>
                    <Button Width="36" Height="36" Padding="0" Background="#23272E" BorderThickness="0" ToolTip="Закрыть" DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="0,0,12,0" Click="OnCloseButtonClick">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8BB;" FontSize="20" Foreground="#E81123" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Button>
                </DockPanel>
            </Border>
            <!-- Поля -->
            <StackPanel Grid.Row="1" Margin="32,24,32,8" VerticalAlignment="Top">
                <TextBlock Text="Название" Foreground="#F3F3F3" Margin="0,0,0,2"/>
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Height="36" Margin="0,0,0,8" FontSize="15" VerticalContentAlignment="Center"/>
                <TextBlock Text="Тип" Foreground="#F3F3F3" Margin="0,0,0,2"/>
                <TextBox Text="{Binding Type, UpdateSourceTrigger=PropertyChanged}" Height="36" Margin="0,0,0,8" FontSize="15" VerticalContentAlignment="Center"/>
                <TextBlock Text="Дата начала" Foreground="#F3F3F3" Margin="0,0,0,2"/>
                <DatePicker SelectedDate="{Binding StartDate, UpdateSourceTrigger=PropertyChanged}" Height="36" Margin="0,0,0,8" FontSize="15"/>
                <TextBlock Text="Дата окончания" Foreground="#F3F3F3" Margin="0,0,0,2"/>
                <DatePicker SelectedDate="{Binding EndDate, UpdateSourceTrigger=PropertyChanged}" Height="36" Margin="0,0,0,8" FontSize="15"/>
                <TextBlock Text="Описание" Foreground="#F3F3F3" Margin="0,0,0,2"/>
                <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" Height="36" Margin="0,0,0,8" FontSize="15" VerticalContentAlignment="Center"/>
                <TextBlock Text="Статус" Foreground="#F3F3F3" Margin="0,0,0,2"/>
                <TextBox Text="{Binding Status, UpdateSourceTrigger=PropertyChanged}" Height="36" Margin="0,0,0,0" FontSize="15" VerticalContentAlignment="Center"/>
            </StackPanel>
            <!-- Кнопки -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,24,16">
                <Button Width="120" Height="38" Margin="0,0,10,0" IsDefault="True" Click="Save_Click" Background="#4F8EF7" Foreground="White" FontWeight="SemiBold" FontSize="16" BorderThickness="0" Cursor="Hand"  Style="{DynamicResource IconButton}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8FB;" FontSize="18" Margin="0,0,8,0"/>
                        <TextBlock Text="Сохранить" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Width="100" Height="38" IsCancel="True" Background="#444" Foreground="#F3F3F3" FontWeight="SemiBold" FontSize="16" BorderThickness="0" Cursor="Hand"  Style="{DynamicResource IconButton}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE711;" FontSize="18" Margin="0,0,8,0"/>
                        <TextBlock Text="Отмена" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window> 