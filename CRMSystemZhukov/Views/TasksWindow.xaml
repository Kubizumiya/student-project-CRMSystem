<Window x:Class="CRMSystemZhukov.Views.TasksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CRMSystemZhukov.ViewModels"
        Title="Задачи по сделке" Height="600" Width="900" MinHeight="400" MinWidth="600" WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="CanResize" Background="#23272E">
    <Border CornerRadius="14" Background="#23272E">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="64"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!-- Верхняя панель -->
            <Border Grid.Row="0" Background="#2C313A" CornerRadius="14,14,0,0" Height="64">
                <DockPanel VerticalAlignment="Center">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE7C3;" FontSize="28" Foreground="#4F8EF7" Margin="20,0,8,0" DockPanel.Dock="Left"/>
                    <TextBlock Text="Задачи по сделке" FontSize="20" FontWeight="Bold" Foreground="#F3F3F3" VerticalAlignment="Center"/>
                    <Button Width="36" Height="36" Padding="0" Background="#23272E" BorderThickness="0" ToolTip="Закрыть" DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="0,0,12,0" Click="OnCloseButtonClick">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8BB;" FontSize="20" Foreground="#E81123" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Button>
                </DockPanel>
            </Border>
            <!-- Контент -->
            <Grid Grid.Row="1" Margin="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16" Grid.Row="0">
                    <Button Style="{StaticResource IconButton}" Command="{Binding AddTaskCommand}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE710;" FontSize="18" Margin="0,0,8,0"/>
                            <TextBlock Text="Добавить задачу" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource IconButton}" Command="{Binding EditTaskCommand}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE70F;" FontSize="18" Margin="0,0,8,0"/>
                            <TextBlock Text="Редактировать" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource IconButton}" Command="{Binding DeleteTaskCommand}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74D;" FontSize="18" Margin="0,0,8,0"/>
                            <TextBlock Text="Удалить" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                <DataGrid ItemsSource="{Binding Tasks}" SelectedItem="{Binding SelectedTask, Mode=TwoWay}" Grid.Row="1" Margin="0" AutoGenerateColumns="True"/>
            </Grid>
        </Grid>
    </Border>
</Window> 